// prisma/auth/schema.prisma

generator client {
  provider = "prisma-client-js"
  output   = "../../node_modules/@prisma/client-auth"
}

datasource db {
  provider = "postgresql"
  url      = env("AUTH_DATABASE_URL")  // veja .env abaixo
}

model Usuario {
  id        Int      @id @default(autoincrement())
  nome      String
  email     String   @unique
  contato   String
  senha     String
  slug      String?   // exemplo: "nakaneimoveis"
  createdAt DateTime @default(now())
}
